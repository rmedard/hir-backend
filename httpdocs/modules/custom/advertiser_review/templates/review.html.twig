<!-- DEBUG: View mode is: {{ view_mode|default('undefined') }} -->
<!-- DEBUG: Available variables: {{ _context|keys|join(', ') }} -->

{# Only render if NOT teaser mode - let review--teaser.html.twig handle teaser #}
{% if view_mode != 'teaser' %}
  <article{{ attributes }}>
    {% if view_mode != 'full' %}
      {{ title_prefix }}
      {{ title_suffix }}
    {% endif %}
    {% if content %}
      {{- content -}}
    {% endif %}
  </article>
{% endif %}
