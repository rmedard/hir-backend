{#
/**
 * @file
 * Theme implementation to display a review in teaser view mode.
 *
 * Available variables:
 * - review: The review entity.
 * - content: All review items.
 * - star_rating: Rendered star rating HTML.
 * - truncated_message: Truncated review message.
 * - formatted_date: Formatted creation date.
 * - reviewer_name: Name of the reviewer.
 * - rating_value: Numeric rating value.
 * - view_mode: View mode; "teaser".
 * - attributes: HTML attributes for the containing element.
 */
#}

{%
  set classes = [
  'review',
  'review--' ~ view_mode|clean_class,
  'card',
  'mb-3',
  'shadow-sm', 'border-0'
]
%}

<article{{ attributes.addClass(classes) }}>
  <div class="card-body p-3">
    <div class="d-flex justify-content-between align-items-start mb-2">
      <h6 class="card-title mb-0 fw-bold">
        <i class="fa-solid fa-user me-1"></i>{{ reviewer_name }}
      </h6>
      <div class="rating">
        {{ star_rating|raw }}
        <small class="text-muted ms-1">({{ rating_value }}/5)</small>
      </div>
    </div>

    <p class="card-text text-muted mb-2">{{ truncated_message }}</p>

    <div class="d-flex justify-content-between align-items-center">
      <small class="text-muted">
        <i class="fas fa-calendar-alt me-1"></i>{{ formatted_date }}
      </small>
      {% if content.field_verified is defined and content.field_verified %}
        <span class="badge bg-success">
          <i class="fas fa-check-circle me-1"></i>Verified
        </span>
      {% endif %}
    </div>
  </div>
</article>
